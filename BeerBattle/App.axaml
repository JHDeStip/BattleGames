<battleGamesCommon:AppBase x:Class="Stip.BeerBattle.App"
                           xmlns="https://github.com/avaloniaui"
                           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                           xmlns:local="clr-namespace:Stip.BeerBattle"
                           xmlns:battleGamesCommon="clr-namespace:Stip.BattleGames.Common"
                           Name="{x:Static local:UIStrings.Global_ApplicationName}">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="avares://BattleGames.Common/Resources.axaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

    <Application.Styles>
        <FluentTheme/>
        <StyleInclude Source="avares://BattleGames.Common/Styles.axaml"/>
        <StyleInclude Source="/Styles.axaml"/>
    </Application.Styles>

    <!--To remove the auto-generated "About Avalonia" global menu on macOS we need to set an empty menu.-->
    <NativeMenu.Menu>
        <NativeMenu/>
    </NativeMenu.Menu>

</battleGamesCommon:AppBase>
